#!/usr/bin/awk -f

BEGIN {
    FS=";" #separation character
	}
{
    if(FILENAME==ARGV[1]){
	if(NR>0){
 	    sub("\015$","",$(NF)) #avoid CR problem
	    
	    idanim[substr($1,4,16)]=$15;	#weise $3 auf $1 zu
	}
    }
    else if (FILENAME~"1stgcscore.forR") {
	sub("\015$","",$(NF));
	ID="0";
	ID=idanim[substr($1,4,16)]; 
	
	if(ID!=""){
	    print ID";"$2
	}
	else{
	    print "########;"$2
	}
    }
    else {
	sub("\015$","",$(NF));
	IDanimal="0";
	IDanimal=idanim[$2]; 
	if(IDanimal!=""){
	    print $1";"IDanimal";"$3";"$4
	}
	else{
	    print $1" ######## "$2" "$3" "$4
	}
    }
}



